<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cavalier" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cbrown_fonce</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>

    </style>
    <style name="boutton_cavalier">
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="lesbackground">
        <item name="android:background">@color/cBackgroundColor</item>
    </style>
    <style name="menu_cavalier">
        <item name="android:background">@color/cBackgroundColor</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/cBackgroundColor</item>
        <item name="colorPrimary">@color/cbrown_fonce</item>
        <item name="android:titleTextColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:layout_gravity">left</item>
    </style>
    <style name="texte_view">
        <item name="fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/cbrown_fonce</item>
    </style>
    <style name="editTextStyle">
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/cBackEt</item>
        <item name="android:background">@color/cBackEt</item>
        <item name="android:textColorHint">@color/cblack_transp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
</resources>